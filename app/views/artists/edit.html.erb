<%= form_with url: "/artists/#{@artist.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :member_count %>
  <%= form.text_field :member_count %>
  <%= form.label :album_count %>
  <%= form.text_field :album_count %>
  <%= form.label :actively_touring %>
  <%= form.select :actively_touring, [
    ["Choose...", "NULL"],
    ["Yes", "true"],
    ["No", "false"],
  ] %>
  <%= form.submit 'Submit' %>
<% end %>
