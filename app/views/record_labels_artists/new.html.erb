<div class="container">
  <div class="col-6 mx-auto">
    <%= form_with url: "/record_labels/#{@record_label.id}/artists", method: :post, local: true do |form| %>
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
      <%= form.label :member_count %>
      <%= form.text_field :member_count, class: 'form-control' %>
      <%= form.label :album_count %>
      <%= form.text_field :album_count, class: 'form-control' %>
      <%= form.label :actively_touring %>
      <%= form.select :actively_touring, [
        ["Choose...", "NULL"],
        ["Yes", "true"],
        ["No", "false"],
      ], {}, class: 'form-select' %>
      <%= form.submit "Create Artist", class: 'btn btn-primary mt-3' %>
    <% end %>
  </div>
</div>
